section.hero
  .container.hero__container
    header.hero__header
      .hero__logo
        .logo КК
      .hero__menu
        nav.menu
          ul.menu__items
            each item in menu
              li.menu__item
                a.menu__link #{item}
      .hero__links
        ul.socials
          each item in icons
            li.socials__item
              a.socials__link
                +icon(item, 'socials__icon')
    .hero__content
      .user-info
        .user-info__desc Личный сайт веб разработчика
        .user-info__username Карина Колесник
    .hero__buttons
      a.scroll-btn Скролл
        +icon('scroll', 'socials__icon')
